function init_msg()
	message={}
end


function create_msg(name,...)
	msg_title=name
	messages={...}
end

function update_msg()
	if (btn(❎)) then
		deli(messages,1)
	end
end

function draw_msg()
	if messages[1] then
		local y=100
		rectfill(6,y,40,y+6,2)
		print(msg_title,7,y+1,7)
		print(messages[1],3,y+10,7)
	end
end
