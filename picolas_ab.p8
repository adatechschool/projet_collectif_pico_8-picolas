--ui

function draw_ui()
	camera()
	
	palt(0,false)
	palt(7,true)
	spr(48,2,2)
	palt()
	
	print_outline("X"..p.keys,10,2)
end

function print_outline(text,x,y)
	print(text,x-1,y,0)
	print(text,x+1,y,0)
	print(text,x,y-1,0)
	print(text,x,y+1,0)
	print(text,x,y,7)
	
end
