-- player
function create_player()
	p={
	x=6, 
	y=4, 
	sprite=1,
	keys=0
	}
end

function player_movement()
	newx=p.x
	newy=p.y
	if (btnp(➡️)) newx+=1
	if (btnp(⬅️)) newx-=1
	if (btnp(⬇️)) newy+=1
	if (btnp(⬆️)) newy-=1
	
	interact(newx,newy)
	
	if not check_flag(0,newx,newy) then 
		-- on avance
		p.x=mid(0,newx,127)
		p.y=mid(0,newy,63)  
		end
end 

function interact(x,y)
	if check_flag(1,x,y) then
		pick_up_key(x,y)
		end
	if x==7 and y==3 then 
	create_msg("un perso", 
	"ceci est un message")
	end
end

function draw_player()
	spr(p.sprite,p.x*8,p.y*8)
end
